<% page_title "Show kind of ticket" %>

<p>
  <b>Title:</b>
  <%=h @ticket_kind.title %>
</p>

<p>
  <b>Eventbrite ticket to give access to:</b>
  <% @eventbrite_tickets.each do |eticket| %>
    <% if eticket['id'] == @ticket_kind.eventbrite_ticket_id %>
      <%=h eticket['name'] %>
    <% end %>
  <% end %>
</p>

<p>
  <b>Prefix:</b>
  <%=h @ticket_kind.prefix %>
</p>

<p>
  <b>subject:</b>
  <%=h @ticket_kind.subject %>
</p>

<p>
  <b>Template:</b>
  <%= simple_format @ticket_kind.template %>
</p>


<%= link_to 'Edit', edit_ticket_kind_path(@ticket_kind) %> |
<%= link_to 'Back', ticket_kinds_path %>
